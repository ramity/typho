{% extends 'base.html.twig' %}

{% block body %}
    <h1>Trend</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trend.id }}</td>
            </tr>
            <tr>
                <th>Input</th>
                <td>{{ trend.input }}</td>
            </tr>
            <tr>
                <th>Updatetime</th>
                <td>{% if trend.updateTime %}{{ trend.updateTime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('trend_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('trend_edit', { 'id': trend.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
