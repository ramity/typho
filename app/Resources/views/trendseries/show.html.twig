{% extends 'base.html.twig' %}

{% block body %}
    <h1>Trendseries</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trendSeries.id }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{% if trendSeries.time %}{{ trendSeries.time|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Searchpercent</th>
                <td>{{ trendSeries.searchPercent }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('trend_series_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('trend_series_edit', { 'id': trendSeries.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
